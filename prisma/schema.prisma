generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums
enum VerifyType {
  EMAIL
  PASSWORD_RESET
}

enum genders {
  MALE
  FEMALE
}

enum user_status {
  RED
  GREEN
  YELLOW
  WHITE
}

model admins {
  id                  Int                   @id @default(autoincrement())
  name                String
  email               String                @unique
  password            String
  created_at          DateTime              @default(now())
  updated_at          DateTime              @updatedAt
  personal_tokens     personal_tokens[]
  verification_tokens verification_tokens[]
}

model personal_tokens {
  id            Int      @id @default(autoincrement())
  admin_id      Int
  user_device   String?
  refresh_token String
  expires_at    Int
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt

  admins admins @relation(fields: [admin_id], references: [id], onDelete: Cascade)

  @@index([refresh_token], type: Hash)
}

model verification_tokens {
  id          Int        @id @default(autoincrement())
  admin_id    Int
  code        Int
  token       String
  verify_type VerifyType
  expires_at  DateTime
  created_at  DateTime   @default(now())

  admins admins @relation(fields: [admin_id], references: [id], onDelete: Cascade)

  @@index([code], type: Hash)
  @@index([token], type: Hash)
}

model users {
  id            Int          @id @default(autoincrement())
  name          String
  nid           String
  father        String
  mother        String
  occupation    String
  date_of_birth String
  mobile_no     String
  upozilla_id   Int
  union_id      Int
  village_id    Int
  gender        genders
  status        user_status?
  created_at    DateTime     @default(now())
  updated_at    DateTime?    @updatedAt

  @@index([gender], type: Hash)
}

model upozillas {
  id     Int      @id @default(autoincrement())
  name   String
  unions unions[]
}

model unions {
  id          Int    @id @default(autoincrement())
  upozilla_id Int
  name        String

  upozillas upozillas  @relation(fields: [upozilla_id], references: [id], onDelete: Cascade)
  villages  villages[]

  @@index([upozilla_id], type: Hash)
}

model villages {
  id       Int    @id @default(autoincrement())
  union_id Int
  name     String

  unions unions @relation(fields: [union_id], references: [id], onDelete: Cascade)

  @@index([union_id], type: Hash)
}
